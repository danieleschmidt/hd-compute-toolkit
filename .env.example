# HD-Compute-Toolkit Environment Configuration
# Copy this file to .env and configure values for your environment

# =============================================================================
# HARDWARE ACCELERATION SETTINGS
# =============================================================================

# CUDA Configuration
CUDA_VISIBLE_DEVICES=0
TORCH_CUDA_ARCH_LIST=7.0;7.5;8.0;8.6;9.0
CUDNN_BENCHMARK=1

# JAX Configuration  
JAX_PLATFORM_NAME=gpu
JAX_ENABLE_X64=true
XLA_PYTHON_CLIENT_PREALLOCATE=false

# FPGA Development (Optional)
# PYNQ_BOARD=Pynq-Z1
# FPGA_BITSTREAM_PATH=/opt/xilinx/bitstreams/
# VIVADO_HLS_PATH=/opt/Xilinx/Vivado/2023.1

# Vulkan Configuration (Optional)
# VK_INSTANCE_LAYERS=VK_LAYER_KHRONOS_validation
# VK_DEVICE_EXTENSIONS=VK_KHR_storage_buffer_storage_class

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================

# Python Environment
PYTHONPATH=/workspaces/hd-compute-toolkit
PYTHONDONTWRITEBYTECODE=1
PYTHONUNBUFFERED=1

# Testing Configuration
PYTEST_CURRENT_TEST=true
COVERAGE_CORE=sysmon
HYPOTHESIS_PROFILE=dev

# Logging Configuration
LOG_LEVEL=INFO
ENABLE_PERFORMANCE_LOGGING=false
BENCHMARK_OUTPUT_DIR=./benchmarks/results

# =============================================================================
# PERFORMANCE TUNING
# =============================================================================

# Memory Management
HDC_MEMORY_POOL_SIZE=1073741824  # 1GB default
HDC_ENABLE_MEMORY_POOL=true
HDC_GARBAGE_COLLECTION=aggressive

# Parallel Processing
OMP_NUM_THREADS=8
MKL_NUM_THREADS=8
OPENBLAS_NUM_THREADS=8
NUMBA_NUM_THREADS=8

# Hypervector Defaults
DEFAULT_HDC_DIMENSION=10000
DEFAULT_SPARSITY=0.5
DEFAULT_DEVICE=cuda

# =============================================================================
# SECURITY SETTINGS
# =============================================================================

# API Keys (For cloud services - keep these secret!)
# WANDB_API_KEY=your_wandb_key_here
# TENSORBOARD_LOG_DIR=./logs/tensorboard
# MLFLOW_TRACKING_URI=http://localhost:5000

# Security Scanning
BANDIT_EXCLUDE_PATHS=tests/,examples/
SAFETY_IGNORE_VULNERABILITIES=

# =============================================================================
# CI/CD SETTINGS
# =============================================================================

# GitHub Actions
GITHUB_TOKEN=
CODECOV_TOKEN=

# Docker Configuration
DOCKER_BUILDKIT=1
COMPOSE_DOCKER_CLI_BUILD=1

# =============================================================================
# BENCHMARK SETTINGS
# =============================================================================

# Benchmark Configuration
BENCHMARK_WARMUP_ITERATIONS=10
BENCHMARK_MEASUREMENT_ITERATIONS=100
BENCHMARK_TIMEOUT_SECONDS=300
BENCHMARK_DEVICES=cuda,cpu
BENCHMARK_DIMENSIONS=1000,10000,32000

# Performance Targets
TARGET_BUNDLE_LATENCY_MS=1.0
TARGET_BIND_LATENCY_MS=0.5  
TARGET_SIMILARITY_LATENCY_MS=0.1

# =============================================================================
# EXAMPLE APPLICATION SETTINGS
# =============================================================================

# Speech Command Recognition
SPEECH_DATASET_PATH=./data/speech_commands
SPEECH_MODEL_CHECKPOINT_DIR=./checkpoints/speech
SPEECH_FEATURE_EXTRACTOR=mfcc
SPEECH_NUM_CLASSES=35

# Cognitive Computing
SEMANTIC_MEMORY_DIM=32000
ASSOCIATIVE_MEMORY_CAPACITY=10000
ITEM_MEMORY_SIZE=1000

# =============================================================================
# MONITORING & OBSERVABILITY
# =============================================================================

# Metrics Collection
ENABLE_METRICS=true
METRICS_PORT=9090
PROMETHEUS_GATEWAY=localhost:9091

# Distributed Tracing
JAEGER_AGENT_HOST=localhost
JAEGER_AGENT_PORT=6831
TRACE_SAMPLE_RATE=0.1

# Health Checks
HEALTH_CHECK_INTERVAL=30
HEALTH_CHECK_TIMEOUT=5
HEALTH_CHECK_RETRIES=3

# =============================================================================
# DOCUMENTATION SETTINGS
# =============================================================================

# Sphinx Documentation
DOCS_BUILD_DIR=docs/_build
DOCS_SOURCE_DIR=docs
DOCS_AUTO_BUILD=true

# Jupyter Notebooks
JUPYTER_PORT=8888
JUPYTER_TOKEN=
NOTEBOOK_DIR=./examples

# =============================================================================
# DEVELOPMENT TOOLS
# =============================================================================

# Pre-commit Configuration
PRE_COMMIT_SKIP=
SKIP_HOOKS=

# Code Quality
BLACK_LINE_LENGTH=88
ISORT_PROFILE=black
FLAKE8_MAX_LINE_LENGTH=88
MYPY_STRICT_MODE=true

# =============================================================================
# NOTES
# =============================================================================
# 
# 1. Never commit the actual .env file - it may contain secrets
# 2. GPU settings depend on your hardware - adjust CUDA_VISIBLE_DEVICES accordingly  
# 3. FPGA settings require Xilinx tools installation
# 4. Performance settings should be tuned based on your hardware
# 5. For production deployments, use proper secret management
#